<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pouillos.mydepenses">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AccueilActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.afficher.AfficherDepenseActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.ajouter.AjouterCategorieDepenseActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.afficher.AfficherListeDepenseActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.afficher.AfficherListeBudgetMensuelActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.afficher.AfficherListeBudgetAnnuelActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>